{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"checkJs": true,
		/* Bundled projects */
		"lib": ["dom", "dom.iterable", "ES2022"],
		"noEmit": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"plugins": [
			{
				"name": "next"
			}
		],
		"incremental": true,
		/* Path Aliases */
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@workspace/ui/*": ["../../packages/ui/src/*"]
		}
	},
	"include": [
		".eslintrc.cjs",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.cjs",
		"**/*.js",
		".next/types/**/*.ts",
		"../server/env.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
