{
  "name": "starter-plus-server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "build-ts": "tsc"
  },
  "exports": {
    "./hc": {
      "types": "./dist/hc.d.ts",
      "import": "./dist/hc.js",
      "require": "./dist/hc.js"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.876.0",
    "@aws-sdk/s3-request-presigner": "^3.876.0",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "hono": "^4.9.4",
    "starter-db": "workspace:^",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6"
  }
}
