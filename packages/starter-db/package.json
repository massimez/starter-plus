{
  "name": "starter-db",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "import": "./src/schema/index.ts",
      "require": "./src/schema/index.ts"
    }
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun run src/schema/seed/index.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.0",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5"
  }
}
