{
	"name": "starter-plus",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F @workspace/web dev",
		"dev:server": "turbo -F @workspace/server dev",
		"db:push": "turbo -F @workspace/server db:push",
		"db:studio": "turbo -F @workspace/server db:studio",
		"db:generate": "turbo -F @workspace/server db:generate",
		"db:migrate": "turbo -F @workspace/server db:migrate"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run check .",
		"commit-msg": "bun commitlint --edit $1"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/node": "24.10.1",
		"@types/bun": "latest",
		"@biomejs/biome": "^2.3.2",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"simple-git-hooks": "^2.13.1",
		"turbo": "^2.5.8"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"packageManager": "bun@1.3.1",
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.2.0"
	}
}
