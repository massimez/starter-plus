{
  "name": "starter-plus",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F starter-plus-web dev",
    "dev:server": "turbo -F starter-plus-server dev",
    "db:push": "turbo -F starter-db db:push",
    "db:studio": "turbo -F starter-db db:studio",
    "db:generate": "turbo -F starter-db db:generate",
    "db:migrate": "turbo -F starter-db db:migrate"
  },
  "simple-git-hooks": {
    "commit-msg": "bun commitlint --edit $1"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bun": "latest",
    "simple-git-hooks": "^2.11.1",
    "turbo": "^2.5.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "bun@1.2.17",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.2.0"
  }
}
